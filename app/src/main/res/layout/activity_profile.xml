<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yirugao.dec1606_littlemermaid.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/nameLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="50dp"
        android:textSize="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTextfield"
        android:layout_alignTop="@+id/nameLabel"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/nameLabel"
        android:layout_alignBottom="@+id/nameLabel"
        android:editable="false"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:id="@+id/ageLabel"
        android:textSize="32dp"
        android:layout_below="@+id/nameLabel"
        android:layout_alignLeft="@+id/nameLabel"
        android:layout_alignStart="@+id/nameLabel"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ageTextfield"
        android:textSize="30dp"
        android:editable="false"
        android:layout_below="@+id/ageLabel"
        android:layout_alignLeft="@+id/nameLabel"
        android:layout_alignBottom="@+id/ageLabel"
        android:layout_alignRight="@+id/nameTextfield"
        android:layout_alignEnd="@+id/nameTextfield" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:id="@+id/genderLabel"
        android:textSize="32dp"
        android:layout_below="@+id/ageTextfield"
        android:layout_alignLeft="@+id/ageLabel"
        android:layout_alignStart="@+id/ageLabel"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genderTextfield"
        android:textSize="30dp"
        android:editable="false"
        android:layout_alignBottom="@+id/genderLabel"
        android:layout_alignTop="@+id/genderLabel"
        android:layout_alignLeft="@+id/ageTextfield"
        android:layout_alignStart="@+id/ageTextfield" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/addressLabel"
        android:textSize="32dp"
        android:layout_below="@+id/genderTextfield"
        android:layout_alignLeft="@+id/genderLabel"
        android:layout_alignStart="@+id/genderLabel"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressTextfield"
        android:textSize="30dp"
        android:editable="false"
        android:layout_alignRight="@+id/genderTextfield"
        android:layout_alignEnd="@+id/genderTextfield"
        android:layout_alignTop="@+id/addressLabel"
        android:layout_alignLeft="@+id/genderTextfield"
        android:layout_alignStart="@+id/genderTextfield" />
</RelativeLayout>
