<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yirugao.dec1606_littlemermaid.ReceiveActivity">

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Next"
        android:id="@+id/nextButton"
        android:textSize="18sp"
        android:layout_above="@+id/backspaceButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Backspece"
        android:id="@+id/backspaceButton"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignLeft="@+id/nextButton"
        android:layout_alignStart="@+id/nextButton" />

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Return"
        android:id="@+id/returnButton"
        android:textSize="18sp"
        android:layout_alignTop="@+id/button9"
        android:layout_alignLeft="@+id/backspaceButton"
        android:layout_alignStart="@+id/backspaceButton" />

    <Button
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:id="@+id/button"
        android:textSize="21sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:id="@+id/button2"
        android:textSize="21sp"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:id="@+id/button3"
        android:textSize="21sp"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:id="@+id/button4"
        android:textSize="21sp"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <Button
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:id="@+id/button5"
        android:textSize="21sp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:id="@+id/button6"
        android:textSize="21sp"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:id="@+id/button7"
        android:textSize="21sp"
        android:layout_alignBottom="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <Button
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:id="@+id/button8"
        android:textSize="21sp"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7" />

    <Button
        android:layout_width="155dp"
        android:layout_height="90dp"
        android:id="@+id/button9"
        android:textSize="21sp"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8" />

</RelativeLayout>
